@model SalesWebMVC.Models.Seller

@{
    ViewData["Title"] = "Delete";
}

<h3>@ViewData["Title"] Seller</h3>

@*<h4>Are you sure you want to delete this?</h4>*@

<div>
    <hr />

    <div>
        <strong>@Html.DisplayNameFor(model => model.Name)</strong>
        <p>@Html.DisplayFor(model => model.Name)</p>
    </div>

    <div>
        <strong>@Html.DisplayNameFor(model => model.Email)</strong>
        <p>@Html.DisplayFor(model => model.Email)</p>
    </div>

    <div>
        <strong>@Html.DisplayNameFor(model => model.BirthDate)</strong>
        <p>@Model.BirthDate.ToString("dd/MM/yyyy")</p>
    </div>

    <div>
        <strong>@Html.DisplayNameFor(model => model.BaseSalary)</strong>
        <p>@Html.DisplayFor(model => model.BaseSalary)</p>
    </div>

    <form asp-action="Delete">
        <button asp-action="Index" class="btn btn-default">Back to List</button>
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
